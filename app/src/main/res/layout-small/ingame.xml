<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inGameMainParent">

    <RelativeLayout
        android:id="@+id/PosterLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/RelativeLayoutXS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <FrameLayout
            android:layout_width="@dimen/FrameLayoutWidthXS"
            android:layout_height="@dimen/FrameLayoutHeightXS">

            <ImageButton
                android:id="@+id/BackToeMenuButton"
                android:layout_width="@dimen/ImageButtonXS"
                android:layout_height="@dimen/ImageButtonXS"
                android:contentDescription="@string/MenuButton"
                android:tint="@color/background"
                app:srcCompat="@android:drawable/ic_menu_sort_by_size"
                android:onClick="InGameMenu"
                />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/GuessResult"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/LinearLayoutXS"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <include layout="@layout/keyboard" />
    </RelativeLayout>

</RelativeLayout>