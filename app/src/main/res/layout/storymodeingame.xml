<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/poster">

  <LinearLayout
      android:id="@+id/TitleScreen"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:orientation="horizontal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

  </LinearLayout>


  <TextView
      android:id="@+id/Week"
      android:layout_width="@dimen/RecieptW"
      android:layout_height="@dimen/RecieptH"
      android:layout_below="@+id/Rank"
      android:layout_marginStart="32dp"
      android:layout_marginLeft="32dp"
      android:layout_marginTop="8dp"
      android:text="@string/Week"
      android:textSize="@dimen/TextViewForReciept"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/Rank" />

  <TextView
      android:id="@+id/Rank"
      android:layout_width="@dimen/RecieptW"
      android:layout_height="@dimen/RecieptH"
      android:layout_marginStart="32dp"
      android:layout_marginLeft="32dp"
      android:layout_marginTop="16dp"
      android:layout_weight="1"
      android:text="@string/Rank"
      android:textSize="@dimen/TextViewForReciept"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/TitleScreen" />

  <TextView
      android:id="@+id/PreviousBalance"
      android:layout_width="@dimen/RecieptW"
      android:layout_height="@dimen/RecieptH"
      android:layout_below="@+id/Week"
      android:layout_marginStart="32dp"
      android:layout_marginLeft="32dp"
      android:layout_marginTop="8dp"
      android:text="@string/PreviousBalance"
      android:textSize="@dimen/TextViewForReciept"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/Week" />


  <TextView
      android:id="@+id/CurrentBalance"
      android:layout_width="@dimen/RecieptW"
      android:layout_height="@dimen/RecieptH"
      android:layout_below="@+id/PreviousBalance"
      android:layout_marginStart="32dp"
      android:layout_marginLeft="32dp"
      android:layout_marginTop="8dp"
      android:text="@string/CurrentBalance"
      android:textSize="@dimen/TextViewForReciept"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/PreviousBalance" />

  <LinearLayout
      android:id="@+id/PictureScreen"
      android:layout_width="@dimen/PictureScreenW"
      android:layout_height="@dimen/PictureScreenH"
      android:layout_alignParentTop="true"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginStart="32dp"
      android:layout_marginLeft="32dp"
      android:layout_marginTop="8dp"
      android:layout_toEndOf="@+id/CurrentBalance"
      android:layout_toRightOf="@+id/CurrentBalance"
      app:layout_constraintBottom_toTopOf="@+id/linearLayout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.804"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/CurrentBalance"
      app:layout_constraintVertical_bias="1.0">

    <ImageView
        android:layout_width="@dimen/PoliceScreenW"
        android:layout_height="@dimen/PoliceScreenH"
        android:background="@drawable/policeman"
        android:cropToPadding="false" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="@dimen/PoliceScreenH"
        android:cropToPadding="false" />

    <ImageView
        android:layout_width="@dimen/TreasureScreenW"
        android:layout_height="@dimen/TreasureScreenH"
        android:background="@drawable/treasure" />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="350dp"
      android:layout_height="105dp"
      android:layout_below="@id/PictureScreen"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <Button
        android:id="@+id/PoliceButton"
        android:layout_width="@dimen/ProgressScreenW"
        android:layout_height="@dimen/ProgessScreenH"
        android:text="@string/ProgressButton" />

    <Button
        android:layout_width="@dimen/ProgressScreenW"
        android:layout_height="@dimen/ProgessScreenH"
        android:text="@string/BalanceButton" />

  </LinearLayout>

</android.support.constraint.ConstraintLayout>