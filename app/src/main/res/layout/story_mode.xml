<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/StoryModeEngaged"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/poster" />

    <VideoView
        android:id="@+id/VideoScreen"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ImageView"
        app:layout_constraintTop_toTopOf="@+id/ImageView"
        app:layout_constraintVertical_bias="0.398"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/StoryIntro"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_below="@+id/VideoScreen"
        android:layout_marginTop="8dp"
        android:text="Intro"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/VideoScreen"
        tools:layout_editor_absoluteX="200dp" />

    <Button
        android:id="@+id/StoryPlay"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_below="@+id/VideoScreen"
        android:layout_marginTop="8dp"
        android:text="Play"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/VideoScreen"
        tools:layout_editor_absoluteX="30dp" />




</android.support.constraint.ConstraintLayout>