<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inGameMainParent">

    <RelativeLayout
        android:id="@+id/posterLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_heightRL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <FrameLayout
            android:layout_width="@dimen/FrameLayout_Width"
            android:layout_height="@dimen/FrameLayout_Height">

            <ImageButton
                android:id="@+id/PopUpMenuButton"
                android:layout_width="@dimen/ImageButton_width"
                android:layout_height="@dimen/ImageButton_height"
                android:contentDescription="@string/MenuButton"
                android:onClick="InGameMenu"
                android:tint="@color/background"
                app:srcCompat="@android:drawable/ic_menu_sort_by_size" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/guess__result"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/InGameLinearLayout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" />

    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <include layout="@layout/keyboard" />
    </RelativeLayout>

</RelativeLayout>