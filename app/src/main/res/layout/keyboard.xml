<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/background"
        android:layout_weight="0.6"


    >

        <ImageButton
            android:contentDescription="@string/MenuButton"
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@android:drawable/ic_menu_sort_by_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/keyboard"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/LetterQ"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/q"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterW"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/w"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterE"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/e"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterR"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/r"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterT"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/t"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterY"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/y"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterU"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/u"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterI"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/i"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterO"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/o"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterP"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/p"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />


    </LinearLayout>


    <!--The second row of the keyboard-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:background="@color/keyboard"
        android:layout_weight="2">

        <Button
            android:id="@+id/LetterA"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/a"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterS"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/s"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterD"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/d"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterF"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/f"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterG"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/g"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterH"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/h"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterJ"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/j"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterK"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/k"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterL"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/l"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />

    </LinearLayout>
    <!--The third row of the keyboard-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:background="@color/keyboard"
        android:layout_weight="2">

        <Button
            android:id="@+id/LetterZ"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/z"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterX"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
            android:text="@string/x"
            android:textSize="17sp"
            android:textColor="@color/background"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/LetterC"
            android:layout_width="@dimen/letterButtonWidth"
            android:layout_height="@dimen/letterButtonHeight"
